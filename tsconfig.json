{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"allowJs": true,
		"jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
		"sourceMap": true,
		"outDir": "build",
		"removeComments": true,
		"strict": true,
		"noImplicitReturns": true,
		"moduleResolution": "node",
		"baseUrl": "./",
		"paths": {},
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src"]
}
